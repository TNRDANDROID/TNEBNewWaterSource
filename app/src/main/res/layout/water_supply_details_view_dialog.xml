<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_centerVertical="true"
        android:background="@drawable/new_corner_border_bg_strong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_details_layout"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/blue_background"
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/habitation_name"
                        tools:ignore="RelativeOverlap" />

                    <ImageView
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/close_icon"
                        android:src="@mipmap/close_icon"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:id="@+id/supply_layout"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/bank_acc_deatils_bg">
                    <ImageView
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:id="@+id/water_supply_icon"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/no_water_supply"/>

                    <TextView
                        android:id="@+id/status_name"
                        android:layout_toEndOf="@+id/water_supply_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="15dp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_14sdp"
                        android:visibility="visible"
                        />

                </RelativeLayout>
                <LinearLayout
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/water_supply_reason_layout"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/select_reason_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reason"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp"
                        />
                    <RelativeLayout
                        android:id="@+id/reason_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginTop="@dimen/padding"
                        android:background="@drawable/bank_acc_deatils_bg"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/reason_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="15dp"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_14sdp"
                            android:visibility="visible"
                            />


                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/water_supply_through_layout"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/select_water_supply_through_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/water_supply_through"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginTop="@dimen/padding"
                        android:background="@drawable/bank_acc_deatils_bg"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/water_supply_through_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="15dp"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_14sdp"
                            android:visibility="visible"
                            />

                    </RelativeLayout>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/total_no_of_trips_layout"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/no_of_trips_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/total_no_of_trips"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp"
                        />
                    <RelativeLayout
                        android:layout_below="@+id/no_of_trips_tv"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:background="@drawable/bank_acc_deatils_bg">

                        <ImageView
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_centerVertical="true"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:id="@+id/name_icon"
                            android:padding="@dimen/_2sdp"
                            android:src="@drawable/road_trip"/>
                        <TextView
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/total_number_of_trips"
                            android:textSize="@dimen/_11sdp"
                            android:layout_toEndOf="@id/name_icon"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_margin="@dimen/_7sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/water_supply_litter_layout"
                    >
                    <TextView
                        android:id="@+id/water_supply_litters_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/water_supply_liter"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp"
                        />
                    <RelativeLayout
                        android:layout_below="@+id/water_supply_litters_tv"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:background="@drawable/bank_acc_deatils_bg">

                        <ImageView
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_centerVertical="true"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:id="@+id/water_supply_litters_tv_icon"
                            android:padding="@dimen/_2sdp"
                            android:src="@drawable/water_drop"/>
                        <TextView
                            android:textSize="@dimen/_11sdp"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/water_supply_litter"
                            android:layout_toEndOf="@id/water_supply_litters_tv_icon"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/amount_layout"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/amount_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/amount"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp"
                        />
                    <RelativeLayout
                        android:layout_below="@+id/amount_tv"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:background="@drawable/bank_acc_deatils_bg">

                        <ImageView
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_centerVertical="true"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:padding="@dimen/_2sdp"
                            android:id="@+id/bank_confirm_acc_icon"
                            android:src="@drawable/indian_new_rupee"/>
                        <TextView
                            android:textSize="@dimen/_11sdp"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/amount"
                            android:layout_toEndOf="@id/bank_confirm_acc_icon"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>



    </LinearLayout>

</RelativeLayout>