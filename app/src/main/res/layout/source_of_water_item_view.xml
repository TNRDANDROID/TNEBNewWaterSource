<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>
        <variable
            name="activity"
            type="com.nic.tnebnewwatersource.adapter.SourceOfWaterAdapter" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@drawable/elevation_bg_new_bg"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:id="@+id/clicked_view"
                android:src="@drawable/ic_oval"/>
            <RelativeLayout
                    android:id="@+id/relative1"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/water_source_lay">
                            <TextView
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/title_water_source_name"
                                android:text="Water Source "
                                android:textColor="@color/grey_9"
                                android:textSize="@dimen/_11sdp"/>
                            <TextView
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_toEndOf="@+id/title_water_source_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/water_source_name"
                                android:textColor="@color/blue_background"
                                android:textSize="@dimen/_12sdp"/>

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/land_mark_lay">
                            <TextView
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/title_land_mark"
                                android:text="Land Mark "
                                android:textColor="@color/grey_9"
                                android:textSize="@dimen/_11sdp"/>
                            <TextView
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_toEndOf="@+id/title_land_mark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/land_mark"
                                android:textColor="@color/blue_background"
                                android:textSize="@dimen/_12sdp"/>

                        </RelativeLayout>
                    </LinearLayout>



                </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/image_layout"
                android:layout_below="@+id/relative1"
                android:layout_margin="@dimen/_5sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:id="@+id/image_1"
                    android:padding="@dimen/_5sdp"
                    android:scaleType="fitXY"/>
            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>
</layout>