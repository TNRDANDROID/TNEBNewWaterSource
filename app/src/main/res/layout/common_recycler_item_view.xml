<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <data>
        <variable
            name="activity"
            type="com.nic.tnebnewwatersource.adapter.HabitationListAdapter" />
    </data>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_10sdp"
        android:id="@+id/card_view"
        app:cardElevation="@dimen/_12sdp"
        android:outlineAmbientShadowColor="@color/colorSecondaryPrimary"
        android:outlineSpotShadowColor="@color/colorPrimaryDark"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        card_view:ignore="UnusedAttribute">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/connection_list_item">

            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:id="@+id/left3"
                card_view:ignore="UselessParent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_centerInParent="true"
                    android:id="@+id/name"
                    android:textAlignment="center"
                    android:textColor="@color/grey4"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"/>
            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</layout>