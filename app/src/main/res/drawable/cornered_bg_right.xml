<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#0dafdc">

    <item>
        <shape android:shape="rectangle"
            >

            <stroke android:color="@color/grey_5"
                android:width="0.5dp"/>



            <corners android:topRightRadius="0dp"
